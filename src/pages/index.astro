---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'DxiCode | Innovación Estudiantil en Tecnología',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Conoce más',
        href: '#features',
        icon: 'tabler:info-circle',
      },
      {
        text: 'Contáctanos',
        href: '#contact',
        icon: 'tabler:message',
      },
    ]}
    image={{ src: '~/assets/images/dxicode-hero.png', alt: 'DxiCode Hero Image' }}
  >
    <Fragment slot="title">
      Bienvenidos a <span class="text-accent dark:text-white">DxiCode</span>
    </Fragment>

    <Fragment slot="subtitle">
      Una iniciativa estudiantil que combina <span class="font-semibold">innovación tecnológica</span> y <span class="font-semibold">experiencia práctica</span> para crear soluciones informáticas adaptadas a tus necesidades.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Nuestra Filosofía"
    description="Combinamos conocimiento académico con experiencia práctica para ofrecer soluciones tecnológicas innovadoras y de alto impacto."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="¿Qué ofrecemos?"
    title="Soluciones adaptadas a tus necesidades"
    subtitle="En DxiCode, desarrollamos herramientas tecnológicas que potencian tu éxito."
    items={[
      {
        title: 'Desarrollo de Software',
        description: 'Creamos aplicaciones personalizadas para resolver problemas específicos.',
        icon: 'tabler:code',
      },
      {
        title: 'Asesoría Tecnológica',
        description: 'Te ayudamos a maximizar el impacto de tus soluciones tecnológicas.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Soporte Técnico',
        description: 'Brindamos soporte continuo para garantizar el éxito de tus proyectos.',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Nuestra Misión"
    title="Impulsar la innovación tecnológica"
    items={[
      {
        title: 'Innovación',
        description: 'Desarrollamos soluciones que combinan creatividad y tecnología.',
      },
      {
        title: 'Colaboración',
        description: 'Trabajamos en equipo para superar desafíos tecnológicos.',
      },
      {
        title: 'Crecimiento',
        description: 'Ayudamos a estudiantes y empresas a alcanzar sus metas tecnológicas.',
      },
    ]}
    image={{
      src: '~/assets/images/dxicode-mission.png',
      alt: 'Misión de DxiCode',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Unimos pasión y tecnología</h3>
      En DxiCode, creemos que la tecnología puede transformar vidas y negocios.
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="¿Cómo trabajamos?"
    items={[
      {
        title: 'Paso 1: <span class="font-medium">Explora</span>',
        description: 'Conoce nuestras soluciones y encuentra la que mejor se adapte a tus necesidades.',
        icon: 'tabler:search',
      },
      {
        title: 'Paso 2: <span class="font-medium">Colabora</span>',
        description: 'Trabajemos juntos para desarrollar una solución personalizada.',
        icon: 'tabler:handshake',
      },
      {
        title: 'Paso 3: <span class="font-medium">Implementa</span>',
        description: 'Lleva tu proyecto al siguiente nivel con nuestras herramientas.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/dxicode-steps.png',
      alt: 'Proceso de trabajo en DxiCode',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Únete a nosotros',
        href: '#contact',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title">
      Forma parte de <span class="text-accent">DxiCode</span>
    </Fragment>

    <Fragment slot="subtitle">
      Sé parte de una comunidad que impulsa la innovación tecnológica. <br class="hidden md:inline" />¡Contáctanos hoy mismo!
    </Fragment>
  </CallToAction>
</Layout>