---
const { settings, title, content } = Astro.props
---

<section class="relative overflow-hidden py-20">

  <!-- Fondo degradado -->
  <div class="absolute inset-0 z-0 bg-gradient-to-b from-white via-slate-100 to-white dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>

  <!-- Contenido -->
  <div class="relative z-10 bs-container flex flex-col items-start gap-6 max-w-2xl mx-auto text-center lg:text-left">

    <!-- TÃ­tulo -->
    <h1 class="bs-h1" set:html={ title } />

    <!-- Contenido -->
    <div class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-bs-foreground-dark" set:html={ content } />

    <!-- CTA -->
    <button type="button" class="bs-btn bs-mt-sm mx-auto lg:mx-0" onclick="demo.showModal()">
      { settings.demo.cta }
    </button>

  </div>

</section>
